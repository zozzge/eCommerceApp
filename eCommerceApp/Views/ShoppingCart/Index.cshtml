@model eCommerceApp.Models.ShoppingCart

@{
    ViewData["Title"] = "My Shopping Cart";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">My Shopping Cart</h1>
    </div>
</section>

@if (Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>
                        <form asp-action="UpdateItemQuantity" method="post">
                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" />
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </td>
                    <td>@(item.Quantity * item.UnitPrice).ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total Price: @ViewBag.TotalPrice.ToString("C")</h3>

    <a href="@Url.Action("Checkout", "ShoppingCart")" class="btn btn-success">Proceed to Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}
