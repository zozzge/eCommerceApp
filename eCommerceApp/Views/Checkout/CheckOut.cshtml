@model IEnumerable<eCommerceApp.Models.PaymentOptions>

@{
    ViewData["Title"] = "Check Out";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <h2>Select a Payment Option</h2>
                <div class="list-group">
                    @foreach (var option in Model)
                    {
                        <h5>@option.Name</h5>
                        <p>@option.Description</p>
                        @if (!string.IsNullOrEmpty(option.ImageUrl))
                        {
                            <img src="@option.ImageUrl" alt="@option.Name" style="max-width: 100px;" />
                        }

                        <a href="@Url.Action("SelectPaymentOption", "Payment", new { id = option.Id })" class="list-group-item list-group-item-action">
                            <h5>@option.Name</h5>
                            <p>@option.Description</p>
                            @if (!string.IsNullOrEmpty(option.ImageUrl))
                            {
                                <img src="@option.ImageUrl" alt="@option.Name" style="max-width: 100px;" />
                            }
                        </a>
                    }
                </div>

                <!-- Buttons to direct to specific pages -->
                <div class="mt-3">
                    <a href="@Url.Action("WhiteLabel", "Payment")" class="btn btn-primary">Pay with WhiteLabel</a>
                    <a href="@Url.Action("Widget", "Payment")" class="btn btn-secondary">Pay with Widget</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
