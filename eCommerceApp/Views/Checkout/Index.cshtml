@model IEnumerable<eCommerceApp.Models.PaymentOptions>

<h2>Checkout</h2>

<div>
    @if (ViewBag.TotalPrice != null)
    {
        <h3>Total Price: @ViewBag.TotalPrice</h3>
    }
    else
    {
        <h3>Total Price: Not available</h3>
    }
</div>

@if (Model != null && Model.Any())
{
    <div class="list-group">
        @foreach (var option in Model)
        {
            var actionName = option.Name switch
            {
                "POS Widget" => "PaymentWidget",
                "POS White Label" => "WhiteLabel",
                _ => "DefaultPage"
            };

            <a href="@Url.Action(actionName, "Payment", new { id = option.Id })" class="list-group-item list-group-item-action">
                <h5>@option.Name</h5>
                <p>@option.Description</p>
                @if (!string.IsNullOrEmpty(option.ImageUrl))
                {
                    <img src="@option.ImageUrl" alt="@option.Name" style="max-width: 100px;" />
                }
            </a>
        }
    </div>
}
else
{
    <p>No payment options available.</p>
}
