@model IEnumerable<PaymentOptions>

<h2>Checkout</h2>

<div>
    <h3>Total Price: @ViewBag.TotalPrice.ToString("C")</h3>
</div>

@if (Model != null && Model.Any())
{
    <div class="list-group">
        @foreach (var option in Model)
        {
            <a href="@Url.Action("SelectPaymentOption", "Checkout", new { id = option.Id })" class="list-group-item list-group-item-action">
                <h5>@option.Name</h5>
                <p>@option.Description</p>
                @if (!string.IsNullOrEmpty(option.ImageUrl))
                {
                    <img src="@option.ImageUrl" alt="@option.Name" style="max-width: 100px;" />
                }
            </a>
        }
    </div>
}
else
{
    <p>No payment options available.</p>
}
