@model IEnumerable<YourNamespace.Models.PaymentOptionViewModel>

<h2>Checkout</h2>

<div>
    @if (ViewBag.TotalPrice != null)
    {
        <h3>Total Price: @ViewBag.TotalPrice</h3>
    }
    else
    {
        <h3>Total Price: Not available</h3>
    }
</div>

@if (Model != null && Model.Any())
{
    <div class="list-group">
        @foreach (var option in Model)
        {
            if (option.Name == "POS Widget")
            {
                <a href="@Url.Action("PaymentWidget", "Payment")" class="list-group-item list-group-item-action">
                    <h5>@option.Name</h5>
                    <p>@option.Description</p>
                    @if (!string.IsNullOrEmpty(option.ImageUrl))
                    {
                        <img src="@option.ImageUrl" alt="@option.Name" style="max-width: 100px;" />
                    }
                </a>
            }
            else if (option.Name == "POS WhiteLabel")
            {
                <a href="@Url.Action("WhiteLabel", "Payment")" class="list-group-item list-group-item-action">
                    <h5>@option.Name</h5>
                    <p>@option.Description</p>
                    @if (!string.IsNullOrEmpty(option.ImageUrl))
                    {
                        <img src="@option.ImageUrl" alt="@option.Name" style="max-width: 100px;" />
                    }
                </a>
            }
        }
    </div>
}
else
{
    <p>No payment options available.</p>
}
